{% trans_default_domain 'FOSUserBundle' %}





<!-- BEGIN FORGOT PASSWORD FORM -->


<!-- BEGIN : LOGIN PAGE 5-1 -->
<div class="user-login-5">
    <div class="row bs-reset">
        <div class="col-md-6 bs-reset mt-login-5-bsfix">
            <div class="login-bg" style="height:100vh">
                <img src="{{ asset('templates/assets/pages/img/login/bg1.jpg') }}" style ="position: absolute;margin: 0px;padding: 0px;border: none;width: 100%;height: 100%;max-height: none;max-width: none;z-index: -999999;left: 0px;"/> </div>
        </div>
        <div class="col-md-6 login-container bs-reset mt-login-5-bsfix">
            <div class="login-content">
                <h1>Admin Login</h1>
                <p> Lorem ipsum dolor sit amet, coectetuer adipiscing elit sed diam nonummy et nibh euismod aliquam erat volutpat. Lorem ipsum dolor sit amet, coectetuer adipiscing. </p>

                <form action="{{ path("fos_user_security_check") }}" class="login-form" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}

                    <div class="alert alert-danger display-hide">
                        <button class="close" data-close="alert"></button>
                        <span>Enter any username and password. </span>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">


                            <input class="form-control form-control-solid placeholder-no-fix form-group" type="text" id="username" placeholder="Username" name="_username" value="{{ last_username }}" required="required" />
                        </div>
                            <div class="col-xs-6">


                                <input class="form-control form-control-solid placeholder-no-fix form-group" type="password" placeholder="Password" id="password" name="_password" required="required" />

                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="rem-password">

                                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>


                                    </div>
                                </div>
                                <div class="col-sm-8 text-right">
                                    <div class="forgot-password">
                                        <a href='{{ path('fos_user_resetting_request') }}' id="forget-password" class="forget-password">Forgot Password?</a>
                                    </div>

                                    <input class="btn green" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                                </div>
                            </div>
                </form>

                <br><br>


                {% if error %}
                    <div style="color:red">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <!-- END FORGOT PASSWORD FORM -->
            </div>

        </div>
    </div>
</div>
<!-- END : LOGIN PAGE 5-1 -->
