{% extends 'base.html.twig' %}

{% block body %}

    <link href="{{ asset('templates/assets/global/css/components-md.min.css') }}" rel="stylesheet" id="style_components" type="text/css" />
    <link href="{{ asset('templates/assets/global/css/plugins-md.min.css') }}" rel="stylesheet" type="text/css" />




<div class="row">
    <div class="col-md-6">
        <!-- BEGIN VALIDATION STATES-->
        <div class="portlet light portlet-fit portlet-form ">
            <div class="portlet-title">
                <div class="caption">
                    <i class=" icon-layers font-green"></i>
                    <span class="caption-subject font-green sbold uppercase">Stock creation</span>
                </div>

            </div>
            <div class="portlet-body">
                <!-- BEGIN FORM-->
                {{ form_start(form) }}
                    <div class="form-body">

                        <div class="form-group form-md-line-input">




                            <div class="form-group form-md-line-input">
                                <label class="col-md-3 control-label" for="form_control_1">Nom Article :
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-9">
                                    {{ form_widget(form.nomArticle , { 'attr': {'class': 'form-control'} }) }}
                                    <div class="form-control-focus"> </div>
                                </div>
                            </div>
                            <br><br>

                            <div class="form-group form-md-line-input">
                                <label class="col-md-3 control-label" for="form_control_1">Quantite :
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-9">
                                    {{ form_widget(form.quantite , { 'attr': {'class': 'form-control'} }) }}
                                    <div class="form-control-focus"> </div>
                                </div>
                            </div>

                            <br><br>

                            <div class="form-group form-md-line-input">
                                <label class="col-md-3 control-label" for="form_control_1">Prix :
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-9">
                                    {{ form_widget(form.prix , { 'attr': {'class': 'form-control' ,'type':'number'} }) }}
                                    <div class="form-control-focus"> </div>

                                </div>
                            </div>
                            {% if not form.vars.valid %}
                                <div class="alert alert-danger">
                                    <strong>Alert!</strong> {{ form_errors(form.prix) }}.

                                </div>


                            {% endif %}
                            <br><br>


                            <div class="form-group form-md-line-input">
                                <label class="col-md-3 control-label" for="form_control_1">Date entr√©e :
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-9">
                                    {{ form_widget(form.dateentre ) }}
                                    <div class="form-control-focus"> </div>
                                </div>
                            </div>

                            <br><br>

                            <div class="form-group form-md-line-input">
                                <label class="col-md-3 control-label" for="form_control_1">Date sortie :
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-9">
                                    {{ form_widget(form.datesortie) }}
                                    <div class="form-control-focus"> </div>
                                </div>
                            </div>




                           <!-- <div class="form-group form-md-line-input">
                            <label class="control-label" for="form_control_1">Nom Article :
                                <span class="required">*</span> </label>

                                <div class="form-control-focus"></div>
                            </div> -->


                           <!-- <div>
                            <label class="control-label" for="form_control_1">Quantite :
                                <span class="required">*</span> </label>

                            </div>

                            <div>
                            <label class="control-label" for="form_control_1">Prix :
                                <span class="required">*</span> </label>

                            </div>





                            <div>
                            <label class="control-label" for="form_control_1">Date sortie :
                                <span class="required">*</span> </label>


                            </div>-->




                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-9">
                                        <input class="btn btn-primary" type="submit" value="Create" />
                                        <button type="reset" class="btn default">Reset</button>
                                    </div>
                                </div>
                            </div>



                        </div>



                    </div>

                {{ form_end(form) }}

                <ul>
                    <li>
                        <a href="{{ path('stock_index') }}">Back to the list</a>
                    </li>
                </ul>
                <!-- END FORM-->
            </div>
        </div>
        </div>
        </div>




    <script src="{{ asset('templates/assets/global/plugins/jquery-validation/js/jquery.validate.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('templates/assets/global/plugins/jquery-validation/js/additional-methods.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('templates/assets/pages/scripts/form-validation-md.min.js" type="text/javascript') }}"></script>
{% endblock %}
